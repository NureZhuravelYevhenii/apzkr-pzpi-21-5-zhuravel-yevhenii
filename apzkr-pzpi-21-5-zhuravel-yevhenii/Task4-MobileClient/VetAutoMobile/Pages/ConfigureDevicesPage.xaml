<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="VetAutoMobile.Pages.ConfigureDevicesPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:VetAutoMobile.ViewModels.PageViewModels"
             Title="ConfigureDevicesPage"
             x:DataType="viewModel:ConfigureDevicesViewModel">
    <VerticalStackLayout>
        <Button Command="{Binding Configure}"
                HorizontalOptions="Center"
                Text="Configure"
                VerticalOptions="Center" />
        <Label IsVisible="{Binding IsConfiguring}"
               Text="Configuring..." />
    </VerticalStackLayout>
</ContentPage>